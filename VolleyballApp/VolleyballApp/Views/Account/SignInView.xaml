<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VolleyballApp.Views.Account.SignInView">
    <ContentPage.Content>
        <StackLayout Margin="15,200,15,15">
            <Label Text="Добро пожаловать!" HorizontalTextAlignment="Center" />
            <Label Text="{Binding Result}" HorizontalTextAlignment="Center" />            
            <Entry Placeholder="Логин"
                   Text="{Binding UserName}"/>
            <Entry Placeholder="Пароль" 
                   IsPassword="True"
                   Text="{Binding Password}"/>
            <StackLayout Orientation="Horizontal">
                <Button Text="Зарегестрироваться" 
                        BackgroundColor="Transparent"
                        BorderColor="Transparent"
                        TextColor="Black"
                        HorizontalOptions="EndAndExpand">
                </Button>
                <Button Text="Войти"
                        BackgroundColor="#2196F3" 
                        TextColor="White" 
                        HorizontalOptions="Center">
                </Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>