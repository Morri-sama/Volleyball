<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VolleyballApp.Views.Teams.TeamPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Название команды"/>
            <Entry Text="{Binding Name}"/>
            <Button Text="Назад" Command="{Binding TeamsViewModel.BackCommand}" CommandParameter="{Binding}"></Button>
            <Button Text="Игроки" Command="{Binding DisplayPlayersCommand}" CommandParameter="{Binding}"></Button>
            <Button Text="Сохранить" Command="{Binding TeamsViewModel.SaveTeamCommand}" CommandParameter="{Binding}"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>